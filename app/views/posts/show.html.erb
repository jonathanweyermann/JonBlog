<div class="well post-simple">
	<h2 class="page-header"><%= @post.title %></h2>
	<small>Posted by <%= @post.user_id %> on <%= @post.created_at.to_time.strftime('%B %e at %l:%M %p') %></small>
	<%= image_tag @post.image.url,width: '100%' %>
	<%= raw @post.body %>
</div>

