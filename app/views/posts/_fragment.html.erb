<div class="col-sm-6 equal">
  <div class="post">
      <div class="post-content">
        <h2><%= post.title %></h2>
        <div class="">
          <%= image_tag post.image.url, class: 'img-crop' %>
        </div>
        <small>Posted by <%= user.name  %> on <%= post.created_at.to_time.strftime("%B %e, %Y at %l:%m %p") %></small>
        <%= raw post.body.truncate(400) %>
        <<%=link_to "Read More", post_path(post), class:'btn btn-primary' %>
      </div>
  </div>
</div>
