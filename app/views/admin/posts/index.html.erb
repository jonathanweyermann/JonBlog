<h2 class="page-header">Manage Posts <%= link_to "Create New", new_admin_post_path, class:'btn btn-success pull-right'%></h2>
<% if @posts.exists? %>
  <table class="table table-striped">
    <tr>
      <th>Post Title</th>
      <th>Post Category</th>
      <th>Post Created</th>
      <th>Actions</th>
      <th>Visible</th>
      <th>Comments</th>
      <th>Preview</th>
    </tr>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.category.name %></td>
        <td><%= post.created_at.to_time.strftime('%B %e at %l:%M %p') %></td>
        <td><%= link_to "Edit", edit_admin_post_path(post), class:'btn btn-primary' %> <%= link_to "Delete", admin_post_path(post), class:'btn btn-danger', method: :delete, data: {confirm: 'Are you Sure'} %></td>
        <td><%= post.production? %> <%= link_to 'Toggle', edit_admin_post_path(post,toggle: true), class:'btn btn-success' %></td>
        <td>
          <%= post.comments.count %>
          <%= link_to 'Delete all', admin_post_path(post, comments_only: true), class:'btn btn-danger', method: :delete, data: {confirm: 'Are you Sure'} %>
          <%= link_to 'View Comments', admin_post_comments_path(post), class: 'btn btn-primary' %>
        </td>
        <td><%= link_to 'Preview', admin_post_path(post), class: 'btn btn-primary' %></td>
      </tr>
    <% end %>
  </table>
  <%= will_paginate @posts %>
<% else %>
  <p>There are no posts</p>
<% end %>
