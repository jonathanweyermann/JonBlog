<div class="comment">
	<div class="row mtb-1">
		<div class="col-sm-2 col-xs-3">
			<%= image_tag("user.jpg") %>
		</div>
		<div class="col-sm-10 col-xs-7">
			<div class="">
				<h4><%= comment.name %><span class="comment_date"><%= comment.created_at.to_time.strftime('%B %e %Y at %l:%M %p') %></span></h4>
				<%= comment.body %>

			</div>
			<%= link_to "Reply", "#{post_path(post.slug,comment_id: comment.id)}#comment" %>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-1">
		</div>
		<div class="col-xs-11">
			<%= render partial: 'partials/comment', collection: comment.sub_comments %>
		</div>
	</div>
</div>
