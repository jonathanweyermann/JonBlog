<!-- Comments -->
<div class="comments">
	<h2 class="page-header"><%= @post.comments.length %> Comments</h2>
	<% @post.comments.each do | comment| %>
	<div class="comment">
		<div class="row">
			<div class="col-sm-2 col-xs-3">
				<%= image_tag("user.jpg") %>
			</div>
			<div class="col-sm-8 col-xs-7">
				<div class="well">
					<h4><%= comment.name %><span>/<%= comment.created_at.to_time.strftime('%B %e at %l:%M %p') %></span></h4>
					<%= comment.body %>
				</div>
			</div>
			<div class="col-xs-7">
				<%= link_to "Reply", post_path(@post.id,comment_id: comment.id) %>
			</div>
		</div>
	</div>
	<% end %>

	<div class="well add-comment">
		<h2 class="page-header">Add Comment</h2>
		<%= form_for([@post, @post.comments.build]) do |f| %>
		  <% f.hidden_field :reply_comment_id, value: params[:comment_id] %>
			<div class="form-group">
				<%= f.label :name %><br>
				<%= f.text_field :name, class:'form-control' %>
			</div>
			<div class="form-group">
				<%= f.label :email %><br>
				<%= f.text_field :email, class:'form-control' %>
			</div>
			<div class="form-group">
				<%= f.label :comment %><br>
				<%= f.text_area :body, class:'form-control', rows: '8' %>
			</div>
			<div class="form-group">
				<%= f.submit "Submit", class:'btn btn-primary' %>
			</div>
		<% end %>
	</div>
</div>
