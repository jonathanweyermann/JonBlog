ready = ->
  debugger
  $('.froala_edit').froalaEditor(
    height: 500
    imageUploadParam: 'file_name'
    imageUploadParams:
      authenticity_token: $('[data-token]').data("token"),
      return_to: window.location.href
    imageUploadURL: '/wysiwygs'
    imageUploadMethod: 'POST'
    imageMaxSize: 5 * 1024 * 1024
    imageAllowedTypes: [
      'jpeg'
      'jpg'
      'png'
    ]
  )
  $('.froala_edit').on 'froalaEditor.image.beforeUpload', (e, editor, images) ->
    debugger
  $('.froala_edit').on 'froalaEditor.image.uploaded', (e, editor, response) ->
    debugger
  $('.froala_edit').on 'froalaEditor.image.inserted', (e, editor, $img, response) ->
  $('.froala_edit').on 'froalaEditor.image.replaced', (e, editor, $img, response) ->
  $('.froala_edit').on 'froalaEditor.image.error', (e, editor, error, response) ->
    debugger

  $('.froala_edit').on 'froalaEditor.image.removed', (e, editor, $img, response) ->
    url = $img.attr('src')
    id = url.match(/\d+/)[0]
    $.ajax ->
      method: 'POST'
      url: "wysiwyg/destroy/#{id}"
      data: src: $img.attr('src')
      error: (data) ->
        console.log 'image delete problem'
      success: (data) ->
        console.log 'image was deleted'

$(document).ready(ready)
$(document).on('page:load', ready)
